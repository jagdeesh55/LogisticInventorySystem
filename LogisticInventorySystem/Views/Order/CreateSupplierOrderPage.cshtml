
@{
    ViewData["Title"] = "Create Supplier OrderPage";
}

<center>
    <h2>Place Supplier Orders</h2>
    <h5>@if (ViewBag.message!=null)
    {
        <script>alert("@ViewBag.message");</script>
    }
    </h5>
    <br />
    <br />
    <form method="post" asp-controller="Order" asp-action="PlaceSupplierOrder" asp-route-orderid="@ViewBag.OrderId" asp-route-itemid="itemid" asp-route-qty="qty">
        <p>
            New Order ID : @ViewBag.OrderId
        </p>
        <p>
            Item Name : <input type="text" name="itemid" value="" required />
        </p>
        <p>
            Quantity : <input type="number" min ="1" name="qty" value="1" required />
        </p>
        <button type="submit" class="btn btn-primary">Place Order</button>
    </form>
    <br />
    <br />
    <br />
    <div class="form-group">
        <a asp-action="Index" asp-controller="Items">Back to Inventory</a>
    </div>
</center>
